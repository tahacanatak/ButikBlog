@model List<Post>
@{
    ViewBag.Title = "Yazılar";
    ViewBag.HeaderTitle = "Yazılar";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Aktif Yazılar</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Yazar</th>
                    <th>Zaman</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Category.CategoryName</td>
                        <td>@item.Author.UserName</td>
                        <td>@item.CreationTime</td>
                        <td>
                            <a href="#" class="btn btn-danger"><i class="fas fa-trash"></i> Sil</a>
                            <a href="#" class="btn btn-info"><i class="fas fa-edit"></i> Düzenle</a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Yazar</th>
                    <th>Zaman</th>
                    <th>İşlemler</th>
                </tr>
            </tfoot>
        </table>
    </div>
    <!-- /.card-body -->
</div>
@section scripts{
    <script>
            $(function () {
                $("#example1").DataTable({
                    language: {
                        url: "@Url.Content("~/Areas/Admin/plugins/datatables/Turkish.json")"
                    }
                });

                $('#example2').DataTable({
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": true,
                    "info": true,
                    "autoWidth": true,
                });
            });
    </script>
}
